/*商品信息容器*/
#product_info_container{
    width:950px;
    height:470px;
    margin:0 auto;
    position:relative;
    top:130px;
}
/*商品信息容器的左侧的竖着的照片列表*/
#product_info_left{
    width:75px;
    height:470px;
    float:left;
}
#product_info_left #pic1{
    display:block;
    width:75px;
    height:75px;
}
#product_info_left #pic1 img{
    width:75px;
    height:75px;
}
#product_info_left #pic1 div{
    width:100%;
    height:100%;
    background-color:black;
    opacity:0.3;
    position:relative;
    top:-78px;
    display:none;
}
