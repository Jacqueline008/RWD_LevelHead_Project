/*媒体查询*/
@media only screen and (max-width: 1200px) {
    #bg_test{
        background-color: gray;
    }

}
@media only screen and (max-width: 992px) {
    #bg_test{
        background-color: pink;
    }
    /******************************图片形式的导航******************************/
    #menu_pics{
        height:380px;
    }
    #menu_pics a{
        height: 180px;
    }
    /***图片中的黑色字幕***/
    #menu_a_tv #tv_div1,#menu_a_aircondition #aircondition_div1,#menu_a_refrigerator #refrigerator_div1,
    #menu_a_washer #washer_div1,#menu_a_waterheater #waterheater_div1,#menu_a_kitchen #kitchen_div1{
        width:33%;
        font-size:14px;
    }
    /***图片中的透明黑色遮罩***/
    #menu_a_tv #tv_div2,#menu_a_aircondition #aircondition_div2,#menu_a_refrigerator #refrigerator_div2,
    #menu_a_washer #washer_div2,#menu_a_waterheater #waterheater_div2,#menu_a_kitchen #kitchen_div2{
        font-size:16px;
    }

}
@media only screen and (max-width: 768px) {
    #bg_test{
        background-color: blue;
    }
    /*****************************标头下方的网站介绍图*********************************************/
    /*隐藏超小设备以上的效果*/
    #banner{
        display: none;
    }
    /*超小设备效果*/
    #banner_mobile{
        display: block;
        width:100%;
        height:250px;
        background:url(../images/home.jpg);
        background-repeat:no-repeat;
        background-size:cover;
        background-position:bottom;
        position: relative;
        top:65px;
    }
    #banner_mobile span{
        display: block;
        color:#fdfdfd;
        letter-spacing:5px;
        font-family:'微软雅黑';
        font-size:17px;
        font-weight:500;
        line-height:50px;
        width:80%;
        margin: 0 auto;
        padding: 0 auto;
        text-align: center;
        position: relative;
        top:60px;
    }

    /******************************图片形式的导航******************************/
    #menu_pics{
        width:100%;
        height:250px;
        top:100px;
    }
    #menu_pics a{
        height: 120px;
    }
    /***图片中的黑色字幕***/
    #menu_a_tv #tv_div1,#menu_a_aircondition #aircondition_div1,#menu_a_refrigerator #refrigerator_div1,
    #menu_a_washer #washer_div1,#menu_a_waterheater #waterheater_div1,#menu_a_kitchen #kitchen_div1{
        width:45%;
        height:17%;
        font-size:12px;
    }
    /***图片中的透明黑色遮罩***/
    #menu_a_tv #tv_div2,#menu_a_aircondition #aircondition_div2,#menu_a_refrigerator #refrigerator_div2,
    #menu_a_washer #washer_div2,#menu_a_waterheater #waterheater_div2,#menu_a_kitchen #kitchen_div2{
        font-size:14px;
    }

}


