#bg_test{
    position: relative;
    top:150px;
    background-color: purple;
}
body{
    margin:0;
    background-image:url(../images/bg.jpg);
}
/************************标头下方的网站介绍图*************************/
/*大型设备及以下效果*/
#banner{
    width:100%;
    height:520px;
    background:url(../images/home.jpg);
    background-repeat:no-repeat;
    background-size:cover;
    background-position:bottom;
}
#banner #window{
    position:relative;
    top:250px;
    width:750px;
    height:110px;
    margin:0 auto;
    text-align:center;
    color:#fdfdfd;
    letter-spacing:13px;
    font-family:'微软雅黑';
    font-size:33px;
    font-weight:500;
    line-height:50px;
    overflow:hidden;
}
/*banner中会向上循环滚动的宣传语*/
#window #scroll_1{
    width:750px;
    height:550px;
    position:relative;
}
#scroll_1 #one1,#scroll_1 #three1,#scroll_1 #five1,#scroll_1 #two1,#scroll_1 #four1{
    width:750px;
    height:110px;
}

#scroll_2{
    width:750px;
    height:550px;
    position:relative;
    top:-440px;
}
#scroll_2 #one2,#scroll_2 #three2,#scroll_2 #five2,#scroll_2 #two2,#scroll_2 #four2{
    width:750px;
    height:110px;
}

#scroll_3{
    width:750px;
    height:550px;
    position:relative;
    top:-990px;
}
#scroll_3 #one3,#scroll_3 #three3,#scroll_3 #five3,#scroll_3 #two3,#scroll_3 #four3{
    width:750px;
    height:110px;
}
/*隐藏为超小设备设置效果*/
#banner_mobile{
    display: none;
}

/******************************图片形式的导航******************************/
#menu_pics{
    width:80%;
    height:460px;
    margin:0px auto;
    position: relative;
    top:60px;
}
#menu_pics a{
    display: block;
    width: 33%;
    height: 220px;
    background-color: gray;
    float: left;
    margin-bottom: 1%;
    text-decoration: none;
}
.middle{
    margin-left:0.5%;
    margin-right: 0.5%;
}
/***图片背景***/
#menu_a_tv,#menu_a_aircondition,#menu_a_refrigerator,#menu_a_washer,#menu_a_waterheater,#menu_a_kitchen{
    background-position:center;
    background-repeat:no-repeat;
    background-size:cover;
}
/***图片中的黑色字幕***/
#menu_a_tv #tv_div1,#menu_a_aircondition #aircondition_div1,#menu_a_refrigerator #refrigerator_div1,
#menu_a_washer #washer_div1,#menu_a_waterheater #waterheater_div1,#menu_a_kitchen #kitchen_div1{
    width:30%;
    height:15%;
    background-color:#333;
    border-radius:15px;
    margin:0 auto;
    position:relative;
    top:75%;
    color:white;
    font-size:18px;
    font-family:'微软雅黑';
    text-align:center;
}
#menu_a_tv #tv_div1 span,#menu_a_aircondition #aircondition_div1 span,#menu_a_refrigerator #refrigerator_div1 span,
#menu_a_washer #washer_div1 span,#menu_a_waterheater #waterheater_div1 span,#menu_a_kitchen #kitchen_div1 span{
    position: relative;
    top:2px;
}
/***图片中的透明黑色遮罩***/
#menu_a_tv #tv_div2,#menu_a_aircondition #aircondition_div2,#menu_a_refrigerator #refrigerator_div2,
#menu_a_washer #washer_div2,#menu_a_waterheater #waterheater_div2,#menu_a_kitchen #kitchen_div2{
    width:100%;
    height:100%;
    background-color:black;
    opacity:0.4;
    color:white;
    font-size:20px;
    font-family:'微软雅黑';
    padding-top: 0%;
    text-align:center;
    letter-spacing:10pt;
    display: none;
}
#menu_a_tv #tv_div2 span,#menu_a_aircondition #aircondition_div2 span,#menu_a_refrigerator #refrigerator_div2 span,
#menu_a_washer #washer_div2 span,#menu_a_waterheater #waterheater_div2 span,#menu_a_kitchen #kitchen_div2 span{
    position: relative;
    top:40%;
    left:10px;
}
