#bg_test{
    position: relative;
    top:250px;
    background-color: purple;
}
body{
    margin:0;
    background-image:url(../images/bg.jpg);
}
#footer{

}

/********************支付区域**********************/
#upOrder_container{
    width:900px;
    height:500px;
    background-color:#FDFDFD;
    margin:0 auto;
    position:relative;
    top:130px;
    box-shadow: -10px 10px 10px #CCCCCC;
    border-radius:5px;
    font-family:'微软雅黑';
}
/*展示订单区域*/
#showOrderArea{
    width:880px;
    margin:0 auto;
    padding-top: 50px;
}
#showOrderArea table{
    margin: 0 auto;
}
#showOrderArea table th{
    border-top:1px dashed grey;
    border-bottom:1px dashed grey;
}
#showOrderArea table td{
    text-align: center;
    width:155px;
}
#showOrderArea table td img{
    width:155px;
    height: 130px;
}
/*展示该用户收货地址区域*/
#showUserAddrArea{
    width:350px;
    height:120px;
    border:2px solid #ef7662;
    position: relative;
    left:480px;
    top:50px;
    padding-left: 40px;
    padding-top: 0px;
}
#showUserAddrArea p{
    font-size:15px;
}
/*立即支付按钮*/
#buynow{
    border:none;
    background-color:#ef7662;
    position:relative;
    left:695px;
    top:50px;
    width:180px;
    height:45px;
    font-family:'微软雅黑';
    color:white;
    font-size:18px;
    transition:background-color 0.4s ease,color 0.4s ease,border 0.4s ease;
}
#buynow:hover{
    background-color:#ededed;
    color:black;
}

/*媒体查询*/
@media only screen and (max-width: 1200px) {
    #bg_test{
        background-color: gray;
    }
}
@media only screen and (max-width: 992px) {
    #bg_test{
        background-color: pink;
    }
    /********************支付区域**********************/
    #upOrder_container{
        width:750px;
    }
    /*展示订单区域*/
    #showOrderArea{
        width:740px;
    }
    #showOrderArea table td{
        text-align: center;
        width:120px;
    }
    #showOrderArea table td img{
        width:120px;
        height: 130px;
    }
    /*展示该用户收货地址区域*/
    #showUserAddrArea{
        left:350px;
    }
    #showUserAddrArea p{
        font-size:15px;
    }
    /*立即支付按钮*/
    #buynow{
        left:565px;
    }
    #buynow:hover{
        background-color:#ededed;
        color:black;
    }
}
@media only screen and (max-width: 768px) {
    #bg_test{
        background-color: blue;
    }
    /********************支付区域**********************/
    #upOrder_container{
        top:80px;
        width:350px;
        height: 450px;
        box-shadow:none;
        font-size: 12px;
    }
    /*展示订单区域*/
    #showOrderArea{
        width:350px;
    }
    #showOrderArea table td{
        text-align: center;
        width:40px;
    }
    #showOrderArea .havePic{
            width:120px;
    }
    #showOrderArea table td img{
        width:120px;
        height: 120px;
    }
    /*展示该用户收货地址区域*/
    #showUserAddrArea{
        width: 230px;
        left:70px;
        height: 100px;
    }
    #showUserAddrArea p{
        font-size:12px;
    }
    /*立即支付按钮*/
    #buynow{
        width:130px;
        height:35px;
        left:215px;
    }
    #buynow:hover{
        background-color:#ededed;
        color:black;
    }

    #footer{
        top:130px;
        padding-bottom: 30px;
    }
}


