#bg_test{
    position: relative;
    top:150px;
    background-color: purple;
}
body{
    margin:0;
    background-image:url(../images/bg.jpg);
}
/********************************************************************/
#rules_container{
    width:85%;
    padding-bottom: 30px;
    background-color:#FDFDFD;
    margin:0 auto;
    position:relative;
    top:130px;
    box-shadow: -10px 10px 10px #CCCCCC;
    border-radius:5px;
    font-family:'微软雅黑';
}
#rules_container h1{
    margin:0;
    font-size:23px;
    text-align:center;
    padding-top:40px;
    margin-bottom:50px;
}
#rules_container h5{
    color:black;
    font-size:16px;
    padding-left:40px;
    padding-right:40px;
}
#rules_container p{
    color:#666;
    font-size:15px;
    padding-left:40px;
    padding-right:40px;
}
/*****************************************************************/



/*媒体查询*/
@media only screen and (max-width: 1200px) {
    #bg_test{
        background-color: gray;
    }
}
@media only screen and (max-width: 992px) {
    #bg_test{
        background-color: pink;
    }
}
@media only screen and (max-width: 768px) {
    #bg_test{
        background-color: blue;
    }
    /*******************/
    #rules_container{
        width:95%;
        position:relative;
        top:80px;
        padding-bottom: 10px;
        box-shadow:none;
    }
    #rules_container h1{
        font-size:16px;
        padding-top:10px;
        margin-bottom:0px;
    }
    #rules_container h5{
        margin: 10px auto;
        color:black;
        font-size:14px;
        padding-left:20px;
        padding-right:20px;
    }
    #rules_container p{
        font-size:12px;
        padding-left:20px;
        padding-right:20px;
    }
}


